<?xml version="1.0" encoding="UTF-8"?>

<!--
xml version and encoding is also for processor software 
xmlns is an xml keyword used to define namespaces, e.g. xmlns:namespace="<url identifier>"
xsi:<schema url> indicates to the xml processor where to find the xsd which enforces this configuration's format
-->

<beans 
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xmlns:c="http://www.springframework.org/schema/c"
  xmlns:p="http://www.springframework.org/schema/p"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <!-- another way to enable component scanning is explicit xml configuration -->
  <context:component-scan base-package="soundsystem" />

</beans>
